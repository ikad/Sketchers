<h1>作品登録</h1>

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <div class="medium-card mdl-card mdl-shadow--2dp">
      <div class="medium-card-svg">
        <%= @post.sketch.html_safe %>
      </div>
  </div>

  <div class="mdl-cell mdl-cell--12-col">
    <%= form_for(@post) do |f| %>
      <%= hidden_field_tag(:confirm, value: true) %>
      <%= f.hidden_field(:sketch) %>

      <div class="title-text-field mdl-textfield mdl-js-textfield">
        <%= f.label(:title, class: "mdl-textfield__label") %>
        <%= f.text_field(:title, class: "mdl-textfield__input") %>
      </div>

      <div class="action">
        <%= f.submit(class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored") %>
      </div>
    <% end %>
  </div>
</div>
