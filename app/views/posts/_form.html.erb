<div class="mdl-cell mdl-cell--12-col">
  <%= form_for(@post) do |f| %>
    <div class="title-text-field mdl-textfield mdl-js-textfield">
      <%= f.label(:title, class: "mdl-textfield__label") %>
      <%= f.text_field(:title, class: "mdl-textfield__input") %>
    </div>

    <div id="canvas"></div>
    <%= f.text_area(:skech, class: "svg-data") %>
    <%= f.submit(class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored") %>
  <% end %>
</div>

<%= javascript_include_tag 'sketch' %>