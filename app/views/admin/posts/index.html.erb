<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
  </div>

  <div class="mdl-cell mdl-cell--12-col">
    <h1>Listing Posts</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Sketch</th>
          <th>User</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td class="image-card"><%= post.sketch.html_safe %></td>
            <td><%= post.user.try(:email) %></td>
            <td><%= link_to 'Show', [:admin, post] %></td>
            <td><%= link_to 'Destroy', [:admin, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>